<%- model_class = User -%>
<% provide(:title, 'All users') %>
<div class="page-header">
  <h1> The Wonderful Users of DigiTD </h1>
</div>

<ul class="users">
  <% @users.each do |user| %>
    <li>
      <%= gravatar_for user, size: 52 %>
      <%= link_to user.name, user %>
    </li>
  <% end %>
</ul>
