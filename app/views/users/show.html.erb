<%- model_class = User -%>
<% provide(:title, @user.name + " Home Page") %>
<div class="row">
  <aside class="span4">
    <section>
      <h1>
        <%= gravatar_for @user %>
        <%= @user.name %>
      </h1>
    </section>
  </aside>

  <div class="span8">
    <% if @user.trips.any? %>
      <h3>Trip Descriptions (<%= @user.trips.count %>)</h3>
      <ol class="microposts">
        <%= render @trips %>
      </ol>
      <%= will_paginate @trips %>
    <% end %>  
  </div>
</div>
